<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wadexhong.coffeeordersystem.mainpage.MainPageFragment"
    android:id="@+id/fragment_mainpage_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_mainpage_cardview"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_mainpage_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_mainpage_button_confirm"
        app:layout_constraintTop_toBottomOf="@+id/fragment_mainpage_cardview">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/fragment_mainpage_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
