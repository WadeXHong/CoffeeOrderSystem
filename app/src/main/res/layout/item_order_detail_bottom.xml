<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp">

    <TextView
        android:id="@+id/item_order_detail_textview_total_items"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:maxLength="20"
        android:singleLine="true"
        android:text="@string/total_items"
        app:layout_constraintEnd_toStartOf="@+id/item_order_detail_textview_total_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_order_detail_textview_total_price"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:maxLength="20"
        android:singleLine="true"
        android:text="@string/total_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_order_detail_textview_cancel"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Cancel"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/item_order_detail_textview_commit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_order_detail_textview_total_items" />

    <TextView
        android:id="@+id/item_order_detail_textview_commit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Commit"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_order_detail_textview_cancel"
        app:layout_constraintTop_toTopOf="@+id/item_order_detail_textview_cancel" />

</android.support.constraint.ConstraintLayout>